# Imagen base de Node
FROM node:20

# Instalar herramientas necesarias para scripts
RUN apt-get update && apt-get install -y curl jq && rm -rf /var/lib/apt/lists/*

# Crear directorio de trabajo en el contenedor
WORKDIR /usr/src/app

# Copiar package.json y package-lock.json
COPY package*.json ./

# Instalar dependencias
RUN npm install

# El código fuente se montará como volumen, no se copia

EXPOSE 3000

# Usar nodemon para desarrollo con hot-reload
CMD ["npm", "run", "dev"]
